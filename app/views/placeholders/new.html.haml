.row
  .col-xs-12.col-md-8.col-md-offset-2
    .panel.panel-default
      .panel-heading
        %h1.panel-title New placeholder
      .panel-body
        = simple_form_for @placeholder, :html => { :multipart => true } do |f|
          = f.file_field :uploaded_avatar
          %br
          = f.submit 'Create placeholder', class: 'btn btn-primary', data: {disable_with: 'Creating...'}
