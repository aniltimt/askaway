!!!
%html(lang="en" xmlns:fb= "http://ogp.me/ns/fb#" ng-app='askaway')
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= content_for?(:title) ? yield(:title) : "Ask Away"
    %meta{:content => yield(:description), :name => "description"}
    %meta{:content => "Meg Howie", :name => "author"}
    %meta{:content => "1059799116", :property => "fb:admins"}
    %meta{:content => "217700340", :property => "fb:admins"}
    %meta{:content => content_for?(:title) ? yield(:title) : 'Ask Away', :property => "og:title"}
    %meta{:content => "website", :property => "og:type"}
    %meta{:content => request.original_url, :property => "og:url"}
    %meta{:content => yield(:description), :property => "og:description"}
    %meta{:content => image_url('square-logo.png'), :property => "og:image"}
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    / fonts added by meg
    %link{:href => "http://fonts.googleapis.com/css?family=Lato:300,400,700", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/AA.png", :rel => "shortcut icon", :type => "image/png"}/

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    = javascript_include_tag "application"

  %body{class: "#{controller.controller_name} #{controller.action_name}"}
    = render 'navbar'

    .container
      = yield

    - unless user_signed_in?
      #login-modal.modal.fade
        = render 'login'
      #registration-modal.modal.fade
        = render 'registration'

    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-44134501-1', 'askaway.co.nz');
      ga('send', 'pageview');

    // UserVoice
    :javascript
      // Include the UserVoice JavaScript SDK (only needed once on a page)
      UserVoice=window.UserVoice||[];(function(){var uv=document.createElement('script');uv.type='text/javascript';uv.async=true;uv.src='//widget.uservoice.com/LWyE5xxX8ed0Ek8Wa4MeuA.js';var s=document.getElementsByTagName('script')[0];s.parentNode.insertBefore(uv,s)})();

      //
      // UserVoice Javascript SDK developer documentation:
      // https://www.uservoice.com/o/javascript-sdk
      //

      // Set colors
      UserVoice.push(['set', {
        accent_color: '#448dd6',
        trigger_color: 'white',
        trigger_background_color: 'rgba(46, 49, 51, 0.6)'
      }]);

      // Identify the user and pass traits
      // To enable, replace sample data with actual user traits and uncomment the line
      UserVoice.push(['identify', {
        email:      "#{current_user.email unless current_user.nil?}", // User’s email address
        name:      "#{current_user.name unless current_user.nil?}", // User’s email address
        created_at: #{if current_user then current_user.created_at.to_i else 0 end}, // Unix timestamp for the date the user signed up
        id:         #{if current_user then current_user.id else 0 end} // Optional: Unique id of the user (if set, this should not change)
      }]);

      // Add default trigger to the bottom-right corner of the window:
      UserVoice.push(['addTrigger', { mode: 'contact', trigger_position: 'bottom-right' }]);

      // Or, use your own custom trigger:
      //UserVoice.push(['addTrigger', '#id', { mode: 'contact' }]);

      // Autoprompt for Satisfaction and SmartVote (only displayed under certain conditions)
      UserVoice.push(['autoprompt', {}]);
