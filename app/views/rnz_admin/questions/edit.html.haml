.row
  .col-xs-12.col-md-8.col-md-offset-2
    .panel.panel-default
      .panel-heading
        %h1.panel-title Assign question
      .panel-body
        %h2.question-body #{@question.name}
        = simple_form_for [:rnz_admin, @question] do |f|
          = f.association :embedded_topic, collection: EmbeddedTopic.order('name asc').all
          = f.submit 'Assign', class: 'btn btn-primary'
